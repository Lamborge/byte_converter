<Window x:Class="byte_converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:byte_converter"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="TextToByte" Height="450" Width="550">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="53,22,0,0" Text="Что делаем?" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <RadioButton x:Name="tb" Content="text - byte" HorizontalAlignment="Left" Margin="181,30,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.485,0.495" Checked="tb_Checked"/>
        <RadioButton x:Name="bt" Content="byte - text" HorizontalAlignment="Left" Margin="291,31,0,0" VerticalAlignment="Top" FontSize="16" Checked="bt_Checked"/>
        <TextBox x:Name="box" HorizontalAlignment="Left" Margin="38,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="386" Height="238"/>
        <Button x:Name="mbutton" Content="Конвертировать" HorizontalAlignment="Center" Margin="0,342,0,0" VerticalAlignment="Top" Height="43" Width="152" Click="mbutton_Click"/>

    </Grid>
</Window>
